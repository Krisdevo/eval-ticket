{% extends 'base.html.twig' %}

{% block title %}New Ticket{% endblock %}

{% block body %}
    <h1>Nouveau Ticket</h1>

{{ form_start(form, {attr: {class: 'row g-3'}}) }}
    <div class="col-12">
        {{ form_row(form.title)}}
    </div>
    <div class="col-12">
        {{ form_row(form.description)}}
    </div>
    <div class="col-12">
        {{ form_row(form.priority)}}
    </div>
    <div class="col-12">
        {{ form_row(form.status)}}
    </div>
    <button type="submit" class="btn-form" arial-label="Bouton de validation">Ajouter</button>
    <a href="{{ path('app_ticket_index') }}">Retour</a>
{{form_end(form)}}
{% endblock %}
