{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td class="{{ticket.priority.badgeclass()}}">{{ ticket.priority.value }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td class="{{ticket.status.badgeclass()}}">{{ ticket.status.value }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">Retour</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">Modifier</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
